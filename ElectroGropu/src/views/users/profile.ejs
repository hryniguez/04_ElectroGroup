<%- include("../partials/head.ejs")%>

    <body class="home__body">

        <%- include("../partials/header.ejs")%>

            <main class="Editar_producto" style="background: linear-gradient(to left, blue,rgb(58, 125, 224));">

                <h1 class="titulo_actualizacion">Perfil de usuario</h1>
                
                    
                    <div class="contenedor_usuario">
                        <section class="main__register__form">
                            <div class="register2 ">
                                <label for="">Nombre </label>
                                    <h2 style="color: black; font-size: 30px;border: black;background-color: white; border-radius: 22px">      <%=user.username%></h2>
                                    
                            </div>
                            <div class="register2 ">
                                <label for="">Email</label>
                                <h2 style="color: black; font-size: 30px;border: black;background-color: white; border-radius: 22px">      <%=user.email%></h2>
                                
                        </div>
                               
                        <% if(user.age) {%>
                        <div class="register2 ">
                            <label for="">Edad</label>
                           <h2 style="color: black; font-size: 30px;border: black;background-color: white; border-radius: 22px">     <%=user.birthday %> </h2>
                            
                    </div>
                    <% }else { %> 
                        <%= null %>

                        <% } %>

                        <% if(user.direction) {%>
                            <div class="register2 ">
                                        <label for="">Direccion</label>
                               <h2 style="color: black; font-size: 30px;border: black;background-color: white; border-radius: 22px">    <%=user.direction %> </h2>
                                
                        </div>
                        <% }else { %> 
                            <%= null %>
    
                            <% } %>

                            <% if(user.phone) {%>
                                <div class="register2 ">
                                    <label for="">Telefono</label>
                                   <h2 style="color: black; font-size: 30px;border: black;background-color: white; border-radius: 22px">      <%=user.phone %> </h2>
                                    
                            </div>
                            <% }else { %> 
                                <%= null %>
        
                                <% } %>

                                <% if(user.genre) {%>
                                    <div class="register2 ">
                                        <label for="">Genero</label>
                                       <h2 style="color: black; font-size: 30px;border: black;background-color: white; border-radius: 22px">     <%=user.genre %> </h2>
                                        
                                </div>
                                <% }else { %> 
                                    <%= null %>
            
                                    <% } %>
                                    
                            <% if (locals.usuario && usuario.rol_id == '1') {%>
                                 <div class="register2" style="    text-align: -webkit-center;">
                                     <label for="rol">Rol</label>
                                     
                                     <input class="campos" type="text" id="rol" name="rol" value="<%= locals.user ? user.rol_id : locals.old && old.rol_id ? old.rol_id : null %>">
                                     <p> <%= locals.errores && errores.rol ? errores.rol.msg : null %> </p>
                                     
                                 </div>    
                             <% } %>
                             <% if (locals.usuario && usuario.rol_id == '1') {%>
                                <div class="register2 ">

                                    <button style="font-size: 28px;background-color: rgb(25, 124, 206);color: white;border-radius: 22px;border: 1px solid #ccc;width: 50%;"  onclick="location.href='/users/dashboard'"> Lista de usuario</button>
                                </div>
                                <div class="register2 ">

                                    <button style="font-size: 28px;background-color: rgb(25, 124, 206);color: white;border-radius: 22px;border: 1px solid #ccc;width: 50%;"  onclick="location.href='/products/dashboard'"> Lista de productos</button>
                                </div>
                            
                                <% } %>
                             
                             <% if(user.image) {%>
                                <div class="register2 ">
                                
                                    <label for="image" class="col-12 mt-3">Foto de perfil</label><br>
                                    <img style="width: 40%;margin-bottom: 20px;" src="/img/users/<%= user.avatar %>" alt="profile image">
                                    
                                </div>
                            <% }else { %> 
                            <div class="register2 ">
                                <label for="image" class="col-12 mt-3">Foto de perfil</label><br>
                                <img style="width: 9%;margin-bottom: 20px;" src="/img/users/<%= user.avatar %>" alt="profile image">
                                <input type="file" class="form-control"  name="image">
                                <p><%= locals.errores && errores.image ? errores.image.msg : null %> </p>
                            </div>
                                <% } %>

                            
                            
                                <div class="register__buttom" style="width: 100%;margin-top: 150px;">
     
                                 <button style="font-size: 22px;background-color: rgb(25, 124, 206); width: 50%;
                                 align-self: center;" ><a href="/users/profileEdit/<%= user.id%>">Actualiza tu perfil</a></button>
                             </div>
                         </section>
                         </div>
     
                         </form>
     
                   
     </main>
 </body>

 </html>
                                
